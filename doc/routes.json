    "/tables": {
      "get": {
        "description": "Obtiene la lista de mesas disponibles en el restaurante",
        "summary": "Obtener mesas disponibles",
        "operationId": "getAvailableTables",
        "tags": [
          "Mesas"
        ],
        "responses": {
          "200": {
            "description": "Lista de mesas disponibles obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/OkResponse"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "object",
                          "properties": {
                            "Tables": {
                              "type": "array",
                              "items": {
                                "type": "object",
                                "properties": {
                                  "id": {
                                    "type": "integer",
                                    "example": 1
                                  },
                                  "size": {
                                    "type": "integer",
                                    "example": 4
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  ]
                },
                "examples": {
                  "Default": {
                    "value": {
                      "status": true,
                      "data": {
                        "Tables": [
                          {
                            "id": 1,
                            "size": 4
                          },
                          {
                            "id": 2,
                            "size": 4
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
