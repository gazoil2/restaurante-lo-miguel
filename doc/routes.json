  "components": {
    "schemas": {
      "ItemMenu": {
        "type": "object",
        "description": "Representa un item del menú del restaurante",
        "properties": {
          "id": {
            "type": "string",
            "format": "id",
            "description": "Identificador único del item",
            "example": "2"
          },
          "name": {
            "type": "string",
            "description": "Nombre del plato/bebida",
            "example": "Pizza Margarita"
          },
          "desc": {
            "type": "string",
            "description": "Descripción detallada del item",
            "example": "Pizza clásica con salsa de tomate, mozzarella y albahaca"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "Precio en pesos",
            "example": 12000.0
          },
          "menuFoodCategory": {
            "type": "object",
            "description": "Categoría del item (entrada, principal, postre)",
            "example": {
              "category": "Principal"
            }
          }
        },
        "required": [
          "id",
          "nombre",
          "precio"
        ]
      },
      "GenericError": {
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean",
            "description": "Indica si la respuesta fue correcta o no",
            "example": false
          },
          "error": {
            "type": "string",
            "description": "Descripción del error",
            "example": "Error interno del servidor"
          }
        },
        "required": [
          "status",
          "error"
        ]
      },
      "OkResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "boolean",
            "description": "Indica si la respuesta fue correcta o no",
            "example": true
          },
          "data": {
            "type": "object",
            "description": "La información de la respuesta",
            "example": {
              "id": 1,
              "nombre": "Ejemplo genérico"
            }
          }
        },
        "required": [
          "data"
        ]
      }
    }
  }
}