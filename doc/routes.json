    "/menu/admin/post": {
      "post": {
        "summary": "Crear un nuevo plato en el menú",
        "description": "Añade un nuevo item al menú con su nombre, descripción, precio, categoría y estado.",
        "tags": [
          "Menú"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "price",
                  "categoryId",
                  "dishStateId"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Pollo"
                  },
                  "desc": {
                    "type": "string",
                    "example": "El mejor pollo de la vida"
                  },
                  "price": {
                    "type": "number",
                    "format": "float",
                    "example": 15000.0
                  },
                  "categoryId": {
                    "type": "integer",
                    "example": 1
                  },
                  "dishStateId": {
                    "type": "integer",
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OkResponse"
                },
                "examples": {
                  "Default": {
                    "value": {
                      "status": "success",
                      "data": {
                        "New Dish": {
                          "id": 2,
                          "name": "Pollo",
                          "desc": "El mejor pollo de la vida",
                          "price": 15000,
                          "menuFoodCategory": {
                            "category": "Entrada"
                          },
                          "dishState": {
                            "name": "Stockeado"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Mala request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                },
                "examples": {
                  "Default": {
                    "value": {
                      "status": false,
                      "error": "Formato de request equivocado."
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Rechazado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                },
                "examples": {
                  "Default": {
                    "value": {
                      "status": false,
                      "error": "Usuario no tiene permisos suficientes."
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                },
                "examples": {
                  "Default": {
                    "value": {
                      "status": false,
                      "error": "Error interno del servidor"
                    }
