{
  "openapi": "3.1.1",
  "info": {
    "title": "API del Menú",
    "version": "1.0",
    "description": "API para la gestión del menú de un restaurante"
  },
  "servers": [
    {
      "url": "https://api.server.test/v1"
    }
  ],
  "paths": {
    "/menu": {
      "get": {
        "summary": "Obtener el menú completo",
        "description": "Recupera el menú completo disponible para todos los usuarios. Devuelve un array con todos los items del menú que estén stockeados.",
        "operationId": "obtenerMenu",
        "tags": [
          "Menú"
        ],
        "responses": {
          "200": {
            "description": "Operación exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Estado de la operación",
                      "example": "success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "menu": {
                          "type": "array",
                          "description": "Lista de items del menú",
                          "items": {
                            "$ref": "#/components/schemas/ItemMenu"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error interno del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenericError"
                },
                "examples": {
                  "Default": {
                    "value": {
                      "status": false,
                      "error": "Error interno del servidor"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
